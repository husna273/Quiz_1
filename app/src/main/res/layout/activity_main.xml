<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/riwayat"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etinputname"
        android:layout_marginTop="90dp"
        android:ems="17"
        android:hint="Nama : "
        android:inputType="textPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="8dp"
        android:textStyle="bold"
        android:textColor="#F4F6F8"/>

    <TextView
        android:id="@+id/tvkode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etinputname"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="masukkan kode item:   SGS/IPX/AV4"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etkodeitem"
        android:layout_width="355dp"
        android:layout_height="48dp"
        android:padding="8dp"
        android:layout_below="@id/etinputname"
        android:layout_marginTop="30dp"
        android:hint=""
        android:textColor="@color/white"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etjmlbarang"
        android:layout_width="355dp"
        android:layout_height="48dp"
        android:padding="8dp"
        android:layout_below="@id/etinputname"
        android:layout_marginTop="100dp"
        android:hint="Jumlah item"
        android:textColor="@color/white"
        android:inputType="number"/>

    <RadioGroup
        android:id="@+id/rgmembership"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_below="@id/etjmlbarang"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <RadioButton
            android:id="@+id/gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gold" />

        <RadioButton
            android:id="@+id/silver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silver" />

        <RadioButton
            android:id="@+id/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biasa" />
    </RadioGroup>

    <TextView
        android:id="@+id/tvdiskon"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="70dp"
        android:textColor="#F3F8F8"
        android:textStyle="italic"
        android:layout_below="@id/rgmembership"
        android:text="Pembelian diatas Rp. 10.000.000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvpotongan"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="5dp"
        android:textColor="#E9F1F1"
        android:textStyle="italic"
        android:layout_below="@id/tvdiskon"
        android:text="akan mendapatkan potongan 100k"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvpotongan"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Detail pembelian item" />


    <TextView
        android:id="@+id/tvNamaBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvHargaBarang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Rp -,--"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvTotalHarga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Rp -,--"
        android:textSize="16sp"/>

</RelativeLayout>
