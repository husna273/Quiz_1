<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/riwayat"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to store"
        android:textColor="#D1D3DC"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="95dp"/>

    <TextView
        android:id="@+id/tvMembershipType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E4E5EC"
        android:layout_gravity="center"
        android:text=" Membership : "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="0dp"/>


    <TextView
        android:id="@+id/tvcustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#D0D1D8"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvKodeBarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code of Item     :"
        android:textColor="#E9E9ED"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNamaBarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of Item    :"
        android:textColor="#D7D9E6"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvJumlahBarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E4E6F3"
        android:text="Jumlah Barang :"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTotalHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Harga        : Rp. "
        android:textColor="#E1E3EC"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDiskon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#DDDEE6"
        android:text="Diskon                : Rp. "
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTotalBayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Bayar        : Rp. "
        android:textSize="15sp"
        android:textColor="#DFE1E8"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvThanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:textColor="#DADDEF"
        android:layout_gravity="center"
        android:text="Thank for coming To "
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#DEE1F3"
        android:layout_gravity="center"
        android:text="Electronic Store"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvhope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#E9E9ED"
        android:layout_gravity="center"
        android:text="Hope to see you Again"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>